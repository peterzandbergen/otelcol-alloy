{
    "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bookworm",
    "customizations": {
        "vscode": {
            "settings": {
                "json.schemas": [
                    {
                        "fileMatch": [
                            "*/devcontainer-feature.json"
                        ],
                        "url": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainerFeature.schema.json"
                    }
                ]
            },
            "extensions": [
                "mads-hartmann.bash-ide-vscode",
                "asciidoctor.asciidoctor-vscode",
                "streetsidesoftware.code-spell-checker",
                "systemticks.c4-dsl-extension",
                "archicionado.cornifer",
                "ms-azuretools.vscode-containers",
                "ms-kubernetes-tools.vscode-kubernetes-tools"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/braun-daniel/devcontainer-features/fzf:1": {},
        "ghcr.io/braun-daniel/devcontainer-features/spaceship:1": {},
        "ghcr.io/devcontainers/features/java:1": {},
        "ghcr.io/rio/features/kustomize:1": {},
        "ghcr.io/devcontainers-extra/features/kubectl-asdf:2": {},
        "ghcr.io/devcontainers-extra/features/kind:1": {}
    },
    "remoteUser": "node",
    "updateContentCommand": "npm install -g @devcontainers/cli",
    "containerEnv": {
        "SHELL": "/bin/zsh"
    }
}